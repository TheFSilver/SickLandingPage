<div class="grid-container">

  <div class="navbar">

    <div class="site-name">
      <h2>Sick Landing Page</h2>
    </div>

    <div class="navbar-buttons">
        <%= button_to "HTML Code", "https://github.com/TheFSilver/SickLandingPage/blob/master/app/views/home/index.html.erb", :method => :get, form: {target: '_blank'} %>
        <%= button_to "CSS Code", "https://github.com/TheFSilver/SickLandingPage/blob/master/app/assets/stylesheets/home.scss", :method => :get, form: {target: '_blank'} %>
        <%= button_to "Images", "https://github.com/TheFSilver/SickLandingPage/tree/master/app/assets/images", :method => :get, form: {target: '_blank'} %>
    </div>

    <div class="avatar">
      <%= link_to "François D.", "https://github.com/TheFSilver", :class => "myname" %>
      <%= link_to image_tag('privateinvestocat.jpg', :class => "avatar_img", :alt => "Github Cat Inspector", :title => "GitHub Profile"), "https://github.com/TheFSilver"%>
    </div>

  </div>

  <div class="big-title">
    <h1>Sick Front-End Services</h1>
  </div>

  <div class="content">

    <div class="image-content">
      <%= image_tag '1.jpeg', :class => "content_img" %>
      <%= image_tag '2.jpeg', :class => "content_img" %>
      <%= image_tag '3.jpeg', :class => "content_img" %>
      <button class="w3-button w3-display-left" onclick="plusDivs(-1)">&#10094;</button>
      <button class="w3-button w3-display-right" onclick="plusDivs(+1)">&#10095;</button>

    </div>

    <div class="text-content">
      <h3>Designing your website the way it should look...</h3>
    </div>

  </div>

  <div class="footer">

    <div class="gitlink">
      Repository GitHub: <%= link_to " TheFSilver", "https://github.com/TheFSilver/SickLandingPage", :class => "github_link" %>
    </div>

    <div class="networks">
      <%= link_to image_tag('fblogo.png', :class => "net-logo", :alt => "Black & White Facebook Logo", :title => "Facebook Profile"), "https://www.facebook.com/dasylva?ref=bookmarks" %>
      <%= link_to image_tag('ttlogo.jpg', :class => "net-logo", :alt => "Black & White Twitter Logo", :title => "Twitter Profile"), "https://twitter.com/TheFSilver" %>
      <%= link_to image_tag('inlogo.jpg', :class => "net-logo", :alt => "Black & White LinkedIn Logo", :title => "LinkedIn Profile"), "https://www.linkedin.com/in/francois-dasylva-64a300128/" %>
      <%= link_to image_tag('iglogo.png', :class => "net-logo", :alt => "Black & White Instagram Logo", :title => "Instagram Profile"), "https://www.instagram.com/thefsilver/" %>
    </div>

    <div class="copyrights">
      © 2018 TheFSilver, Inc.
    </div>

  </div>

</div>

<script>
var slideIndex = 1;
showDivs(slideIndex);

function plusDivs(n) {
  showDivs(slideIndex += n);
}

function showDivs(n) {
  var i;
  var x = document.getElementsByClassName("content_img");
  if (n > x.length) {slideIndex = 1}
  if (n < 1) {slideIndex = x.length}
  for (i = 0; i < x.length; i++) {
     x[i].style.display = "none";
  }
  x[slideIndex-1].style.display = "block";
}
</script>
